{% block sideNavBar %}

    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="{{ path('dashboard') }}" class="brand-link text-center">
            <span class="brand-text font-weight-light">Web App</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="{{ asset('./images/profiles/profile_image_stock01.png') }}" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="{{ path('profile') }}" class="d-block"> {{ employee.name }} {{ employee.surnames}} </a>
                </div>
            </div>
            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                         with font-awesome or any other icon font library -->
                    <li class="nav-item">
                        <a href="{{ path("dashboard") }}" class="nav-link {% if sideNavBar_active == 'dashboard' %} active {% endif %}">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>Panell de Control</p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="{{ path("operations") }}" class="nav-link  {% if sideNavBar_active == 'operations' %} active {% endif %}">
                            <i class="nav-icon fas fa-th"></i>
                            <p>Operatives</p>
                        </a>
                    </li>

                    <li class="nav-header">CALENDARIS</li>
                    <li class="nav-item">
                        <a href="{{ path("calendarOperations") }}" class="nav-link  {% if sideNavBar_active == 'calendarOperations' %} active {% endif %}">
                            <i class="nav-icon fas fa-calendar"></i>
                            <p>Calendari d'Operatives</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path("calendarAvailability") }}" class="nav-link  {% if sideNavBar_active == 'calendarAvailability' %} active {% endif %}">
                            <i class="nav-icon fas fa-calendar-check"></i>
                            <p>Calendari Disponibiltat</p>
                        </a>
                    </li>

                    <li class="nav-header">MISSATGES</li>
                    <li class="nav-item">
                        <a href="{{ path("mail") }}" class="nav-link {% if sideNavBar_active == 'mail' %} active {% endif %}">
                            <i class="nav-icon fas fa-envelope-open"></i>
                            <p>Missatges</p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="{{ path("notifications") }}" class="nav-link {% if sideNavBar_active == 'notifications' %} active {% endif %}">
                            <i class="nav-icon fas fa-envelope"></i>
                            <p>Notificacions</p>
                        </a>
                    </li>

                    <li class="nav-header">INFORMES</li>
                    <li class="nav-item">
                        <a href="{{ path("personalReport") }}" class="nav-link {% if sideNavBar_active == 'personalReport' %} active {% endif %}">
                            <i class="nav-icon fas fa-th"></i>
                            <p>Informe personal</p>
                        </a>
                    </li>

                    <li class="nav-header">CONFIGURACIÓ</li>
                    <li class="nav-item">
                        <a href="{{ path("settings") }}" class="nav-link {% if sideNavBar_active == 'settings' %} active {% endif %}">
                            <i class="nav-icon fas fa-cogs"></i>
                            <p>Configuració</p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

{% endblock %}